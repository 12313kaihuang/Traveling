<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/id_chatmessage_receivelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_chatmessage_receiveHead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user_bg"
            />
        <TextView
            android:id="@+id/id_chatmessage_receivemsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="接收的消息"
            android:background="@drawable/bg_chatmessage_bubble_white"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_chatmessage_sendlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">
        <TextView
            android:id="@+id/id_chatmessage_sendmsg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="发送的消息"
            android:background="@drawable/bg_chatmessage_bubble_green"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_chatmessage_sendHead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/login_bg"
            />
    </LinearLayout>
</LinearLayout>