<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--头-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/default_color_primary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:padding="5dp"
            android:text="@string/str_cancel"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/news_flag3"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_friends_publish"
            android:layout_width="62dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:background="@color/bind_gray"
            android:text="@string/str_publish"
            android:textColor="@color/gray_comment" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/id_addfriendsnote_headline"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="@string/title"
                android:inputType="textMultiLine"
                android:labelFor="@id/et_content"
                android:lines="1"
                android:maxLength="30"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray2"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="结伴目的地："
                    android:textColor="@color/news_flag3_color"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/id_addfriendsnote_destinationeditor"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:hint="请输入您的结伴目的地..."
                    android:textSize="15sp"
                    android:background="@drawable/editsharp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray2"
                android:layout_marginTop="5dp"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.78"
                    android:gravity="center"
                    android:text="结伴时间:"
                    android:textStyle="bold"
                    android:textColor="@color/news_flag3_color"
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/id_addfriendsnote_timestart"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:hint="起始日期"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:background="@drawable/editsharp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="0.3"
                    android:textSize="15sp"
                    android:text="～"/>
                <Button
                    android:id="@+id/id_addfriendsnote_timeend"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="结束日期"
                    android:textSize="15sp"

                    android:background="@drawable/editsharp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray2"
                android:layout_marginTop="5dp"></View>
            <EditText
                android:id="@+id/id_addfriendsnote_content"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:hint="@string/share"
                android:inputType="textMultiLine"
                android:labelFor="@id/et_content"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <!--textMultiLine 多行输入-->



        </LinearLayout>
    </ScrollView>
</LinearLayout>