<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.traveling">

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/traveling"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".developer.zhiming.li.ui.SplashActivity"
            android:theme="@style/NoActionBarFullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--主页-->
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!--引导页-->
        <activity android:name=".developer.zhiming.li.ui.GuideActivity"
            android:theme="@style/NoActionBarFullscreen"/>

        <!--游记/攻略引导页-->
        <activity android:name=".developer.yu.hu.ui.NewsActivity"
            android:label="眉山一日游"/>
        <activity android:name=".developer.ting.li.ui.FriendsNewsActivity"
            ></activity>

    </application>

</manifest>