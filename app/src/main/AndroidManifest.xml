<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.traveling">

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".developer.zhiming.li.ui.SplashActivity"
            android:theme="@style/NoActionBarFullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页 -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- 引导页 -->
        <activity
            android:name=".developer.zhiming.li.ui.GuideActivity"
            android:theme="@style/NoActionBarFullscreen" />

        <!-- 游记/攻略引导页 -->
        <activity
            android:name=".developer.yu.hu.ui.NewsActivity"
            android:label="眉山一日游" />

        <!-- 聊天消息页 -->
        <activity android:name=".developer.jiaming.liu.activity.ChatActivity" />
        <!-- 编辑文本页 -->
        <activity
            android:name=".developer.jiaming.liu.activity.AddNoteActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".developer.jiaming.liu.activity.NoticeActivity" />
        <activity android:name=".developer.jiaming.liu.activity.ChatMoreActivity"/>

        <activity android:name=".developer.ting.li.ui.FriendsNewsActivity"
            />

        <!--登录-->
        <activity
            android:name=".developer.zhiming.li.ui.LoginActivity"
            android:theme="@style/NoActionBarFullscreen" />

        <!--服务条款-->
        <activity
            android:name=".developer.zhiming.li.ui.ServiceTermsActivity"
            android:label="服务条款" />

        <!--注册-->

        <!--忘记密码-->

        <!--编辑个人资料-->
        <activity android:name=".developer.zhiming.li.ui.UserEditActivity"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="设置个人信息"/>

        <!--账号绑定与设置-->
        <activity android:name=".developer.zhiming.li.ui.AccountBindActivity"
            android:label="账号绑定与设置"/>

        <!--关于-->
        <activity android:name=".developer.zhiming.li.ui.ConfigActivity"
            android:label="关于"/>

        <!--绑定邮箱-->
        <activity android:name=".developer.zhiming.li.ui.BindEmailActivity"
            android:label="绑定邮箱"/>


    </application>

</manifest>