<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LCIMConversationDetailActivity">


    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="管理员"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageButton
            android:id="@+id/AdminAddButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="40dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_input_add"/>

        <ImageButton
            android:id="@+id/AdminUserButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="40dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars[0]"/>

        <ImageButton
            android:id="@+id/AdminMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="40dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_manage"/>
    </LinearLayout>

    <TextView
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="黑名单"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageButton
            android:id="@+id/BlackListAddButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="40dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_input_add"/>

        <ImageButton
            android:id="@+id/BlackListUserButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="40dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars[0]"/>
        <ImageButton
            android:id="@+id/BlackListMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="40dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_manage"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="成员列表"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp"/>
        <Button
            android:id="@+id/invite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite"/>
        <Button
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/convMemberList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>